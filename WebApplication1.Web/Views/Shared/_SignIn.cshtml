@model WebApplication1.Web.Models.UserLogin
<div id="cd-login">
    <!-- log in form -->
    @Html.ValidationSummary(true)
    @using (Html.BeginForm("SignIn", "Authentification", FormMethod.Post, new { @id = "loginForm", @class = "cd-form" }))
    {
        @Html.AntiForgeryToken()
        <p class="fieldset">
            <label class="image-replace cd-email" for="signin-email">E-mail</label>
            @Html.TextBoxFor(m => m.Username, new { type = "email", placeholder = "E-mail", id = "signin-email", name = "signin-email", @class = "full-width has-padding has-border" })
            <span class="cd-error-message">Error message here!</span>
        </p>

        <p class="fieldset">
            <label class="image-replace cd-password" for="signin-password">Password</label>
            @Html.TextBoxFor(m => m.Password, new { type = "password", placeholder = "Password", id = "signin-password", name = "signin-password", @class = "full-width has-padding has-border" })
            <a href="#0" class="hide-password">Hide</a>
            <span class="cd-error-message">Error message here!</span>
        </p>

        <p class="fieldset">
            <input type="checkbox" id="remember-me" checked>
            <label for="remember-me">Remember me</label>
        </p>

        <p class="fieldset">
            <button class="full-width has-padding">Submit</button>
        </p>
    }
    <p class="cd-form-bottom-message">
        <a href="#0">Forgot your password?</a>
    </p>
    <!-- <a href="#0" class="cd-close-form">Close</a> -->
</div> <!-- cd-login -->
